{
   "compilerOptions": {
      // Compiling options
      "target": "es5",
      "module": "esnext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "noEmit": true,
      "jsx": "preserve",
      "incremental": true,
      "lib": ["dom", "dom.iterable", "esnext"],
      "plugins": [{ "name": "next" }],
      // Linting options
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      // Custom paths
      "paths": { "@/*": ["./src/*"] }
   },
   "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts"
   ],
   "exclude": ["node_modules"]
}
