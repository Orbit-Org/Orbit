{
   "compilerOptions": {
      "outDir": "dist",
      "sourceMap": true,
      "target": "ESNext",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "src",
      "paths": {
         "@assets/*": [
            "./assets/*"
         ],
         "@contexts/*": [
            "./contexts/*"
         ],
         "@config/*": [
            "./config/*"
         ],
         "@algorithms/*": [
            "./algorithms/*"
         ],
         "@local-types/*": [
            "./types/*"
         ]
      }
   },
   "ts-node": {
      "require": [
         "tsconfig-paths/register"
      ]
   },
   "include": [
      "**/*.ts",
   ],
   "exclude": [
      "dist"
   ]
}
