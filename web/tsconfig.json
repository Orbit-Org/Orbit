{
   "compilerOptions": {
      "outDir": ".express",
      "sourceMap": true,
      "target": "ESNext",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "src"
   },
   "ts-node": {
      "require": [
         "tsconfig-paths/register"
      ]
   },
   "include": [
      "**/*.ts",
   ],
   "exclude": [
      ".express",
      "__mocks__"
   ]
}
