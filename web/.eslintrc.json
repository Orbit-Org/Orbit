{
   "env": {
      "browser": true,
      "es2021": true
   },
   "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
   ],
   "parser": "@typescript-eslint/parser",
   "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
   },
   "plugins": [
      "@typescript-eslint"
   ],
   "ignorePatterns": [
      "coverage",
      ".express",
      "node_modules",
      "jest.config.js"
   ],
   "rules": {
      "indent": [
         "error",
         3
      ],
      "quotes": [
         "error",
         "double"
      ],
      "semi": [
         "error",
         "never"
      ],
      "no-async-promise-executor": "off",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-unused-vars": "warn",
      "no-useless-escape": "off",
      "no-unused-vars": "off",
      "no-multiple-empty-lines": "error",
      "func-style": "error",
      "prefer-const": "error"
   }
}
